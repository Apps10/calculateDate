{
  "name": "test-holidays",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest --passWithNoTests",
    "start:dev:express": "nodemon -r tsconfig-paths/register --exec ts-node ./src/infraestructure/gateways/expressGateway.ts",
    "build": "npx tsc -p . && cpx \"src/**/*.ts\" ./dist",
    "start:express": "ts-node -r tsconfig-paths/register ./src/infraestructure/gateways/expressGateway.ts",
    "cdk:build:lambda": "sh pre-deploy.sh",
    "cdk:build": "sh pre-deploy-layer.sh",
    
    "cdk:compile": "npx tsc -p ./cdk",
    "cdk:deploy:lambda": "npm run cdk:build:lambda && cdk deploy Lambda-stack --app \"npx ts-node --prefer-ts-exts ./cdk/bin/aws.ts\"",
    "cdk:deploy:layer": " npm run cdk:build && cdk deploy Layer-stack --app \"npx ts-node --prefer-ts-exts ./cdk/bin/aws.ts\"",
    "cdk:bootstrap": "cdk bootstrap --app \"npx ts-node --prefer-ts-exts ./cdk/bin/aws.ts\""
  },
