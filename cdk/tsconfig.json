{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@code/*": ["./resources/layers/code/nodejs/node_modules/@code/*"],
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,  // opcional pero recomendado
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["es2022"],
    "outDir": "./dist",        // ðŸ”¹ carpeta fuera de cdk para evitar sobrescribir
    "rootDir": "./",                 // ðŸ”¹ base de los archivos de entrada (bin y lib)
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "resources/**/*.ts"
  ],
  "exclude": [
    "../build",      // âœ… excluir carpeta de salida
    "node_modules",
    "cdk.out",
    "resources/layers"
  ]
}
